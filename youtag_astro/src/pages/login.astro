---
import LoginLayout from '../layouts/LoginLayout.astro';
import { Image } from 'astro:assets';

const slogan = import.meta.env.PUBLIC_SLOGAN;
---

<LoginLayout title="YouTag by Kuchuk Borom Debbarma" description="Sign in to YouTag app">
    <div class="login-wrapper">
        <div class="logo-section">
            <Image
                    src="/youtag.png"
                    width={72}
                    height={72}
                    alt="YouTag Logo"
            />
            <p class="slogan">{slogan}</p>
        </div>

        <div class="login-section" id="googleLoginBtn">
            <button class="google-login">
                <span>Login with Google</span>
            </button>
        </div>

        <!-- Loading Section -->
        <div id="loadingSection" class="loading-section" style="display: none;">
            <div class="loading-bar"></div>
            <p class="loading-text">Please wait while we log you in. If the server is starting up due to inactivity, it may take a few seconds. The process will be faster once the server is active.</p>
        </div>
    </div>

    <script>
        import { getGoogleLoginUrl } from "./api/AuthService";

        document.getElementById("googleLoginBtn")?.addEventListener('click', async () => {
            try {
                console.log("Login button pressed", "debug", "LOGIN");

                // Show loading section
                document.getElementById("loadingSection")?.style.display = "block";

                const url = await getGoogleLoginUrl();

                if (url) {
                    // Redirect to the obtained URL
                    window.location.href = url;
                } else {
                    // Hide loading section and show error
                    document.getElementById("loadingSection")?.style.display = "none";
                    console.error("No login URL received");
                    alert("Unable to initiate Google login. Please try again.");
                }
            } catch (error) {
                console.error("Google login error:", error);
                // Hide loading section and show error
                document.getElementById("loadingSection")?.style.display = "none";
                alert("An error occurred during login. Please try again.");
            }
        });
    </script>

    <style>
        .login-wrapper {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            text-align: center;
        }

        .logo-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 2rem;
        }

        .logo-section svg {
            width: 72px;
            height: 72px;
            margin-bottom: 1rem;
        }

        .logo-section h1 {
            font-size: 1.5rem;
            font-weight: 500;
            color: #030303;
        }

        .slogan {
            color: #606060;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        .login-section {
            width: 100%;
        }

        .google-login {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0.75rem;
            background-color: #fff;
            border: 1px solid #dadce0;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }

        .google-login:hover {
            background-color: #f8f9fa;
            border-color: #d2d2d2;
        }

        .google-login img {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }

        .google-login span {
            color: #5f6368;
            font-weight: 500;
        }

        /* Loading Bar Styles */
        .loading-section {
            margin-top: 20px;
            text-align: center;
        }

        .loading-bar {
            width: 100%;
            height: 4px;
            background-color: #e0e0e0;
            position: relative;
            margin-bottom: 10px;
        }

        .loading-bar::after {
            content: '';
            position: absolute;
            width: 0;
            height: 100%;
            background-color: #4caf50;
            animation: load 5s infinite;
        }

        @keyframes load {
            0% { width: 0%; }
            50% { width: 50%; }
            100% { width: 100%; }
        }

        .loading-text {
            font-size: 0.9rem;
            color: #4caf50;
            font-weight: 500;
            margin-top: 10px;
            max-width: 80%;
            margin: 0 auto;
        }

        @media (max-width: 480px) {
            .login-wrapper {
                width: 95%;
                max-width: 100%;
                margin: 0 1rem;
                padding: 1.5rem;
            }

            .logo-section svg {
                width: 56px;
                height: 56px;
            }

            .logo-section h1 {
                font-size: 1.25rem;
            }

            .loading-text {
                font-size: 0.8rem;
                max-width: 90%;
            }
        }
    </style>
</LoginLayout>
