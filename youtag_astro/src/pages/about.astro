---
import { Github, Youtube, Linkedin, Instagram, Mail } from 'lucide-react';

const developerName = 'Kuchuk Borom Debbarma';
const developerProfilePic = '/kuku.png';
const developerGithub = import.meta.env.PUBLIC_GITHUB;
const developerYoutube = {
    music: import.meta.env.PUBLIC_YOUTUBE_MUSIC,
    coding: import.meta.env.PUBLIC_YOUTUBE_CODE,
};
const developerLinkedin = import.meta.env.PUBLIC_LINKEDIN;
const developerInstagram = import.meta.env.PUBLIC_INSTAGRAM;
const developerEmail = import.meta.env.PUBLIC_EMAIL;

export const prerender = false;
---

<head>
    <title>About Kuchuk Borom Debbarma</title>
    <link rel="icon" href="/youtag.png" type="image/x-icon"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<div class="min-h-screen bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center p-2 sm:p-4">
    <div class="bg-white/80 backdrop-blur-md shadow-2xl rounded-xl sm:rounded-2xl p-4 sm:p-8 w-full max-w-sm sm:max-w-md transform transition-all hover:scale-105 duration-300">
        <div class="flex flex-col items-center">
            <img
                    src={developerProfilePic}
                    alt={developerName}
                    class="w-28 h-28 sm:w-40 sm:h-40 rounded-full border-4 border-white shadow-lg mb-4 sm:mb-6 object-cover"
            />
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2 text-center">
                {developerName}
            </h1>
            <p class="text-sm sm:text-base text-gray-600 text-center mb-4 sm:mb-6 leading-relaxed px-2">
                I am a backend developer (hence the "charming" UI), with interest in distributed systems and game development. <br>
                When I'm not buried in code, you'll catch me jamming on my guitar, playing games, or going for rides to clear my head. <br>
                Oh, and I make music too... because why not? <br>
                <b>Check my social handles below out to explore more!</b>
            </p>

            <div class="flex flex-wrap justify-center gap-4 sm:gap-6 mb-4 sm:mb-6 px-2">
                <a
                        href={developerGithub}
                        target="_blank"
                        class="group flex flex-col items-center text-gray-600 hover:text-black transition-all"
                >
                    <Github size={24} className="sm:h-7 sm:w-7 mb-1 group-hover:scale-110 transition-transform" />
                    <span class="text-[10px] sm:text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                        Hobby Projects
                    </span>
                </a>

                <a
                        href={developerYoutube.music}
                        target="_blank"
                        class="group flex flex-col items-center text-gray-600 hover:text-red-600 transition-all"
                >
                    <Youtube size={24} className="sm:h-7 sm:w-7 mb-1 group-hover:scale-110 transition-transform" />
                    <span class="text-[10px] sm:text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                        Musical Journey
                    </span>
                </a>

                <a
                        href={developerYoutube.coding}
                        target="_blank"
                        class="group flex flex-col items-center text-gray-600 hover:text-red-600 transition-all"
                >
                    <Youtube size={24} className="sm:h-7 sm:w-7 mb-1 group-hover:scale-110 transition-transform" />
                    <span class="text-[10px] sm:text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                        Coding Adventures
                    </span>
                </a>

                <a
                        href={developerInstagram}
                        target="_blank"
                        class="group flex flex-col items-center text-gray-600 hover:text-pink-600 transition-all"
                >
                    <Instagram size={24} className="sm:h-7 sm:w-7 mb-1 group-hover:scale-110 transition-transform" />
                    <span class="text-[10px] sm:text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                        Personal Side
                    </span>
                </a>

                <a
                        href={developerLinkedin}
                        target="_blank"
                        class="group flex flex-col items-center text-gray-600 hover:text-blue-600 transition-all"
                >
                    <Linkedin size={24} className="sm:h-7 sm:w-7 mb-1 group-hover:scale-110 transition-transform" />
                    <span class="text-[10px] sm:text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                        "Professional" Side
                    </span>
                </a>

                <a
                        href={`mailto:${developerEmail}`}
                        class="group flex flex-col items-center text-gray-600 hover:text-blue-600 transition-all"
                >
                    <Mail size={24} className="sm:h-7 sm:w-7 mb-1 group-hover:scale-110 transition-transform" />
                    <span class="text-[10px] sm:text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                        Get in Touch
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes subtle-float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
</style>